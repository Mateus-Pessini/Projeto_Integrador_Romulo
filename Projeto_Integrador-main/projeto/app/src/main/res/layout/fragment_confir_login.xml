<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".view.ConfirLogin"
    android:orientation="vertical"
    android:background="@color/prata">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a Senha:"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="225dp"/>

    <EditText
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/editext"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginVertical="30dp">

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="CANCELAR"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/botaovermelho"
            android:id="@+id/btCancel"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="ENTRAR"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/botaoverde"
            android:layout_marginLeft="40dp"
            android:id="@+id/btEntrar"/>
    </LinearLayout>
</LinearLayout>
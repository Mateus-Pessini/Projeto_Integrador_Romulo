<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ConfirConsulta"
    android:orientation="vertical"
    android:background="@color/prata">

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="  Você Realmente quer"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="Confirmar essa Consulta"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Não"
            android:background="@drawable/botaovermelho"
            android:layout_marginLeft="55dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Sim"
            android:background="@drawable/botaoverde"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>